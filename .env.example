# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/gera_ai_playlists

# PostgreSQL Connection Details (if using separate variables)
PGHOST=localhost
PGPORT=5432
PGUSER=your_username
PGPASSWORD=your_password
PGDATABASE=gera_ai_playlists

# Spotify Developer App Credentials
# Get these from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# AI Services API Keys
# Perplexity AI: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Optional: OpenAI API (backup AI service)
# OPENAI_API_KEY=your_openai_api_key_here

# Optional: Google Gemini API (backup AI service)  
# GEMINI_API_KEY=your_gemini_api_key_here

# Authentication & Sessions
SESSION_SECRET=your_super_secret_session_key_here_minimum_32_characters
REPL_ID=your_replit_app_id
ISSUER_URL=https://replit.com/oidc
REPLIT_DOMAINS=your-app-name.replit.app

# Development Environment
NODE_ENV=development

# Optional: Rate Limiting Configuration
RATE_LIMIT_PER_HOUR=10

# Optional: Database Connection Pool
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30000